<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxWidth="280dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:minWidth="200dp">

        <!-- POI Title -->
        <TextView
            android:id="@+id/infoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POI Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1C1B1F"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Category and Distance Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <!-- Category Chip -->
            <TextView
                android:id="@+id/infoCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_photo_background"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Distance -->
            <TextView
                android:id="@+id/infoDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="1.2km"
                android:textSize="12sp"
                android:textColor="#666666"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Address -->
        <TextView
            android:id="@+id/infoAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Address information"
            android:textSize="13sp"
            android:textColor="#666666"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Action Hint -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Tap for details"
            android:textSize="11sp"
            android:textColor="#1976D2"
            android:fontFamily="sans-serif-medium"
            android:textStyle="italic" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 